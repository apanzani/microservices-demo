<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<pluginGroups>
		<pluginGroup>com.intesasanpaolo.maven.plugins</pluginGroup>
	</pluginGroups>

	<servers>
		<server>
			<id>artifactory-central-repos</id>
			<!-- central mirror id -->
			<username>snapshot-deployer</username>
			<password>snapshot</password>
			<configuration>
				<httpConfiguration>
					<all>
						<connectionTimeout>60000</connectionTimeout>
						<readTimeout>60000</readTimeout>
					</all>
				</httpConfiguration>
			</configuration>
		</server>
		<server>
			<id>artifactory-local-repos</id>
			<!-- local repos id -->
			<username>snapshot-deployer</username>
			<password>snapshot</password>
			<configuration>
				<httpConfiguration>
					<all>
						<connectionTimeout>60000</connectionTimeout>
						<readTimeout>60000</readTimeout>
					</all>
				</httpConfiguration>
			</configuration>
		</server>
        <server>
            <id>artifactory-local-plugins-repos</id>
            <!-- local repos id -->
            <username>snapshot-deployer</username>
            <password>snapshot</password>
            <configuration>
                <httpConfiguration>
                    <all>
                        <connectionTimeout>60000</connectionTimeout>
                        <readTimeout>60000</readTimeout>
                    </all>
                </httpConfiguration>
            </configuration>
        </server>
		<server>
			<id>artifactory-remote-repos</id>
			<!-- remote repos id -->
			<username>snapshot-deployer</username>
			<password>snapshot</password>
			<configuration>
				<httpConfiguration>
					<all>
						<connectionTimeout>60000</connectionTimeout>
						<readTimeout>60000</readTimeout>
					</all>
				</httpConfiguration>
			</configuration>
		</server>
	</servers>

	<profiles>
		<profile>
			<id>artifactory-local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<repositories>
				<repository>
					<id>artifactory-local-repos</id>
					<!--<name>Artifactory releases</name>-->
					<url>http://arti0.sede.corp.sanpaoloimi.com:8081/artifactory/local-repos/</url>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>artifactory-local-plugins-repos</id>
					<url>http://arti0.sede.corp.sanpaoloimi.com:8081/artifactory/local-repos/</url>
				</pluginRepository>
			</pluginRepositories>
		</profile>
		<profile>
		 <id>myprofile</id>
		 <repositories>
		   <repository>
			 <id>my-repo2</id>
			 <name>maven repo</name>
			 <url>	https://repo1.maven.org/maven2/</url>
		   </repository>
		 </repositories>
	   </profile>
	</profiles>

	<activeProfiles>
		<activeProfile>myprofile</activeProfile>
	</activeProfiles>

</settings>
